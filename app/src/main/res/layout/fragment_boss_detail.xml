<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="mboss.tsm.Fragment.BossDetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eaf4f3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="#0083b0"
                            android:gravity="left"
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/btn_back"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="#0083b0"
                            android:tint="#fff"
                            android:src="@mipmap/left_arrow" />
                    </FrameLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/detail_image" />


                <LinearLayout
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="-190dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_detail"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="left"
                                android:text="TOM"
                                android:textColor="#fff"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btnEditBoss"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="18dp"
                                android:background="@mipmap/edit"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Loại thú: "
                                android:textColor="#fff"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSpecies_detail"
                                android:layout_width="55dp"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center|left"
                                android:text="Chó"
                                android:textColor="#fff"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Tuổi:"
                                android:textColor="#fff"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvAge_detail"
                                android:layout_width="30dp"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="30"
                                android:textColor="#fff"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Giới tính: "
                                android:textColor="#fff"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvGender_detail"
                                android:layout_width="55dp"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center|left"
                                android:text="Cái"
                                android:textColor="#fff"
                                android:textSize="12dp"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Cân nặng: "
                                android:textColor="#fff"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvWeight_detail"
                                android:layout_width="40dp"
                                android:layout_height="23dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="30Kg"
                                android:textColor="#fff"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:alpha="0.03"
                        android:src="@drawable/logo" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvBossCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                    <FrameLayout
                        android:id="@+id/frameLayoutDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#eaf4f3"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/empty_message_category"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="110dp"
                            android:text="@string/empty_message_category"
                            android:textColor="#a7a6a6"
                            android:textSize="15dp"
                            android:visibility="gone"


                            />

                        <ImageView
                            android:id="@+id/empty_image_category"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:alpha="0.15"
                            android:src="@drawable/logo"
                            android:visibility="gone" />
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/imCreate"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginTop="150dp"
                        android:background="@null"
                        android:src="@mipmap/create" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>


</LinearLayout>