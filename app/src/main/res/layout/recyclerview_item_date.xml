<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/lnlRoot"
    android:layout_marginBottom="5dp"
    android:background="#fff">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:src="@mipmap/calenda"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDateActivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="17dp"
            android:text="30/11/2018"
            />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="14dp"
            android:text="8:30"
            />
    </FrameLayout>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/edit_date"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        />
    <ImageButton
        android:id="@+id/delete_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/delete_date"
        android:layout_marginTop="20dp"
        android:background="@null"/>

    <!--<ImageView-->
        <!--android:id="@+id/of_notification"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:src="@drawable/bell"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:background="@null"/>-->

    <Switch
        android:id="@+id/on_off_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="0dp"
        />

    <ImageView
    android:id="@+id/of_notification"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/bell"
    android:layout_marginTop="60dp"
    android:background="@null"/>


</LinearLayout>